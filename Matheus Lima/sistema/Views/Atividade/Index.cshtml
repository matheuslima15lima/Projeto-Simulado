@{
    ViewData["Title"] = "Atividade";
}

@* kkkkkkK *@

@* cabeçalho *@
<div style="display: flex">
    <h3>@ViewBag.NomeProfessor</h3>
    <form asp-controller="Login" asp-action="Logout">
        <button type="submit">Sair</button>
    </form>
</div>

@* cadastrar atv *@

<form asp-controller="Atividade" asp-action="CadastrarAtividade">
    <input type="hidden" name="turmaId" value="@ViewBag.TurmaId" />
    <input type="text" name="descricao" placeholder="Nome" required />
    <label>Nome da atividade</label>
    <button type="submit">Cadastrar </button>
</form>

@* título *@

<h4>Turma : @ViewBag.NomeTurma</h4>

@* tabela *@
<table class="table">
    <thead>
        <tr>
            <th scope="col">Número</th>
            <th>Nome da Atividade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var atividade in @ViewBag.Model)
        {
            <tr>
                <td>@atividade.AtividadeId</td>
                <td>@atividade.Descricao</td>
            </tr>
        }
    </tbody>
</table>